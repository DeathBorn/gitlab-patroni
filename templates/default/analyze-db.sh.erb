#!/bin/bash

exec &> >(tee -a "/var/log/gitlab/postgresql/analyze-db-$(date +%Y%m%d-%H%M%S).log")
set -x

[[ "$2" == "master" ]] || exit

for i in $(seq 1 5); do
  gitlab-psql -tc 'SELECT pg_is_in_recovery()' | grep 'f' && break
  sleep 60
done

for statistics_target in <%= @statistics_targets.join(' ') %>; do
  echo "SET default_statistics_target = ${statistics_target}; ANALYZE" | gitlab-psql
done
