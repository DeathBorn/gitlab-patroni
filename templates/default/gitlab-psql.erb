#!/bin/sh

if [ "$(id -n -u)" = "<%= @postgresql_user %>" ] ; then
  cd /tmp; /usr/bin/psql -p <%= @port %> -h <%= @host %> -U <%= @superuser %> -d <%= @db_name %> "${@}"
else
  cd /tmp; sudo runuser -u <%= @postgresql_user %> -- /usr/bin/psql -p <%= @port %> -h <%= @host %> -U <%= @superuser %> -d <%= @db_name %> "${@}"
fi
