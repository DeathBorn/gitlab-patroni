[Unit]
Description=A script that queries pg_stat_activity frequently and stores the results in an external database for later analysis
After=syslog.target network.target

[Service]
Type=simple

User=<%= node['gitlab-patroni']['user'] %>
Group=<%= node['gitlab-patroni']['group'] %>

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=query_snapshotting
WorkingDirectory=~
ExecStart=<%= node['gitlab-patroni']['query_snapshotting']['script_path'] %>

[Install]
WantedBy=multi-user.target
